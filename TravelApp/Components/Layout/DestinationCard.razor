@using TravelApp.Data

<div class="card mb-3">
  <div class="card-body">
    <h5 class="card-title">@Destination.Name</h5>
    <h6 class="card-subtitle mb-2 text-muted">
        @Destination.ExperienceType â€” @Destination.CostEstimate.ToString("C0")
    </h6>

    <button class="btn btn-sm @(Selected ? "btn-danger" : "btn-primary")"
            disabled="@(Enabled ? null : true)"
            @onclick="() => OnToggle.InvokeAsync(Destination)">
        @(Selected ? "Remove from Trip" : "Add to Trip")
    </button>
  </div>
</div>

@code {
    [Parameter] public Destination Destination { get; set; } = default!;
    [Parameter] public bool Enabled { get; set; }
    [Parameter] public bool Selected { get; set; }
    [Parameter] public EventCallback<Destination> OnToggle { get; set; }
}
