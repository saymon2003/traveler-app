@page "/plan-trip/{TravelerId:int}"
@using TravelApp.Data
@inject NavigationManager Navigation

<h3>Plan Trip for @traveler.FirstName @traveler.LastName (@traveler.Style)</h3>

<div class="row">
    <div class="col-md-8">
        <div class="row">
            @foreach (var dest in destinations)
            {
                <div class="col-md-6 mb-3">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@dest.Name</h5>
                            <p class="card-text">@dest.ExperienceType — $@dest.CostEstimate</p>
                            <button class="btn btn-primary" disabled="@(CanAddToTrip(dest) ? null : true)">
                                Add to Trip
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
        <a href="/travelers" class="d-block mt-3">← Back to Travelers</a>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Trip Itinerary</h5>
                <p>No destinations selected yet.</p>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public int TravelerId { get; set; }

    private Traveler traveler;
    private List<Destination> destinations = new();

    protected override void OnInitialized()
    {
        traveler = Helper.GetTravelers().FirstOrDefault(t => t.Id == TravelerId);
        if (traveler == null)
        {
            Navigation.NavigateTo("/travelers");
        }
        else
        {
            destinations = Helper.GetDestinations();
        }
    }

    private bool CanAddToTrip(Destination dest)
    {
        if (traveler.Style == "Budget" && dest.CostEstimate < 1500) return true;
        if (traveler.Style == "Adventure" && (dest.ExperienceType == "Nature" || dest.ExperienceType == "Culture")) return true;
        if (traveler.Style == "Luxury") return true;
        return false;
    }
}
