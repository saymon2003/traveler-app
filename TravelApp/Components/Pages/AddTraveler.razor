@page "/add-traveler"
@using TravelApp.Data

<h3>Add Traveler</h3>

<div class="card p-3">
    <div class="mb-3">
        <label class="form-label">First Name</label>
        <input type="text" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Last Name</label>
        <input type="text" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Travel Style</label>
        <select class="form-select">
            @foreach (var style in travelStyles)
            {
                <option>@style</option>
            }
        </select>
    </div>

    <button class="btn btn-secondary" disabled>Create Traveler (Part 2)</button>

    <div class="mt-3">
        <a href="/travelers">‚Üê Back to Travelers</a>
    </div>
</div>

@code {
    private List<string> travelStyles = Helper.GetTravelStyles();
}
